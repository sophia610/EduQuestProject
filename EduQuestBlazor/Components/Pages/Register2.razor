@page "/register2"

<PageTitle>EduQuest | Register</PageTitle>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
<style>
    .role-card {
        transition: all 0.3s ease;
        border-radius: 1.5rem;
    }

        .role-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 0 20px rgba(0, 123, 255, 0.3);
        }

    .fade-in {
        animation: fadeIn 0.7s ease forwards;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
<div class="register-page d-flex flex-column align-items-center justify-content-center min-vh-100 text-center bg-light position-relative overflow-hidden">

    
    <div class="position-absolute top-0 start-0 translate-middle bg-primary rounded-circle opacity-25" style="width: 200px; height: 200px;"></div>
    <div class="position-absolute bottom-0 end-0 translate-middle bg-info rounded-circle opacity-25" style="width: 300px; height: 300px;"></div>

    <div class="mb-5">
        <h1 class="fw-bold display-4 text-primary">Welcome to <span class="text-info">EduQuest</span></h1>
        <p class="lead text-secondary">Let's get started — who are you joining as?</p>
    </div>

    <div class="d-flex flex-column flex-md-row gap-4 mb-5 justify-content-center">
        <!-- Student Card -->
        <div class="card role-card border-0 shadow-lg" style="width: 16rem; cursor: pointer;" @onclick='() => SelectRole("Student")'>
            <div class="card-body d-flex flex-column align-items-center">
                <img src="images/student.png" alt="Student" class="mb-3" style="width: 90px; height: 90px;" />
                <h5 class="card-title text-primary fw-bold">I'm a Student</h5>
                <p class="card-text text-muted small">I want to learn, explore and grow 🌱</p>
            </div>
        </div>

        <!-- Teacher Card -->
        <div class="card role-card border-0 shadow-lg" style="width: 16rem; cursor: pointer;" @onclick='() => SelectRole("Teacher")'>
            <div class="card-body d-flex flex-column align-items-center">
                <img src="images/teacher.png" alt="Teacher" class="mb-3" style="width: 90px; height: 90px;" />
                <h5 class="card-title text-info fw-bold">I'm a Teacher</h5>
                <p class="card-text text-muted small">I want to inspire and guide others ✨</p>
            </div>
        </div>
    </div>

    @if (SelectedRole != null)
    {
        <div class="fade-in">
            <h2 class="fw-bold mb-3 text-secondary">Great choice! 👏</h2>
            <p class="text-muted mb-4">Let's start your journey as a <span class="fw-semibold text-primary">@SelectedRole</span>.</p>
            <button class="btn btn-lg btn-primary px-5 shadow-sm" @onclick="ContinueToNextPage">
                Continue →
            </button>
        </div>
    }

    <div class="position-absolute bottom-0 mb-3 text-muted small fst-italic">
        Empowering learning, inspiring growth 🌟
    </div>
</div>



@code {
    private string? SelectedRole { get; set; }

    [Inject] NavigationManager NavManager { get; set; } = default!;

    private void SelectRole(string role)
    {
        SelectedRole = role;
    }

    private void ContinueToNextPage()
    {
        if (SelectedRole == "Student")
            NavManager.NavigateTo("/register-student");
        else if (SelectedRole == "Teacher")
            NavManager.NavigateTo("/register-teacher");
    }
}
