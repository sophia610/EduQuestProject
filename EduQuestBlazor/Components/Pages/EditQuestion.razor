@page "/edit-question/{QuestionId:int}"
@using DBL
@using Models
@inject NavigationManager nav
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage session

<PageTitle>Edit Question | EduQuest</PageTitle>

<style>
    body {
        margin: 0;
        background: #f5f7fa;
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    }

    .page-container {
        min-height: 100vh;
        background: #f5f7fa;
    }

    .top-nav {
        background: white;
        padding: 16px 32px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .back-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        background: none;
        border: none;
        color: #3b82f6;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        padding: 8px 16px;
        border-radius: 8px;
        transition: all 0.2s;
    }

        .back-btn:hover {
            background: #eff6ff;
        }

    .content-wrapper {
        max-width: 900px;
        margin: 0 auto;
        padding: 32px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .page-title {
        font-size: 36px;
        font-weight: 700;
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0 0 12px 0;
    }

    .page-subtitle {
        font-size: 16px;
        color: #6b7280;
    }

    .form-card {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }

    .form-group {
        margin-bottom: 28px;
    }

    .form-label {
        display: block;
        font-size: 15px;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 10px;
    }

        .form-label.required::after {
            content: '*';
            color: #ef4444;
            margin-left: 4px;
        }

    .form-input {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 15px;
        font-family: inherit;
        transition: all 0.2s;
        box-sizing: border-box;
    }

        .form-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
        }

    textarea.form-input {
        resize: vertical;
        min-height: 100px;
    }

    .error-message {
        color: #ef4444;
        font-size: 14px;
        margin-top: 6px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .helper-text {
        font-size: 13px;
        color: #6b7280;
        margin-top: 6px;
    }

    .section-divider {
        border: none;
        border-top: 2px solid #f3f4f6;
        margin: 40px 0;
    }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .answers-container {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .answer-item {
        display: flex;
        gap: 12px;
        align-items: start;
        padding: 20px;
        background: #f9fafb;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        transition: all 0.2s;
    }

        .answer-item:hover {
            border-color: #d1d5db;
        }

        .answer-item.correct {
            background: #f0fdf4;
            border-color: #86efac;
        }

    .answer-number {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 14px;
        flex-shrink: 0;
    }

    .answer-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .answer-input-row {
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .answer-input {
        flex: 1;
    }

    .correct-checkbox {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        user-select: none;
        padding: 10px 16px;
        background: white;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        transition: all 0.2s;
        white-space: nowrap;
    }

        .correct-checkbox:hover {
            border-color: #86efac;
            background: #f0fdf4;
        }

        .correct-checkbox.checked {
            background: #dcfce7;
            border-color: #86efac;
        }

    .checkbox-input {
        width: 20px;
        height: 20px;
        cursor: pointer;
        accent-color: #22c55e;
    }

    .checkbox-label {
        font-size: 14px;
        font-weight: 600;
        color: #374151;
    }

    .delete-answer-btn {
        background: #fef2f2;
        border: 2px solid #fecaca;
        color: #dc2626;
        width: 36px;
        height: 36px;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        flex-shrink: 0;
    }

        .delete-answer-btn:hover {
            background: #fee2e2;
            border-color: #fca5a5;
        }

    .add-answer-btn {
        width: 100%;
        padding: 16px;
        background: #f9fafb;
        border: 2px dashed #d1d5db;
        border-radius: 14px;
        color: #6b7280;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

        .add-answer-btn:hover {
            background: #f3f4f6;
            border-color: #9ca3af;
            color: #374151;
        }

    .form-actions {
        display: flex;
        gap: 12px;
        margin-top: 40px;
        padding-top: 32px;
        border-top: 2px solid #f3f4f6;
    }

    .btn {
        flex: 1;
        padding: 16px 32px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white;
    }

        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .btn-secondary {
        background: #f3f4f6;
        color: #374151;
    }

        .btn-secondary:hover {
            background: #e5e7eb;
        }

    .loading-spinner {
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .hint-icon {
        font-size: 20px;
    }

    .validation-summary {
        background: #fef2f2;
        border: 2px solid #fecaca;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
    }

    .validation-title {
        font-size: 15px;
        font-weight: 700;
        color: #dc2626;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .validation-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

        .validation-list li {
            font-size: 14px;
            color: #991b1b;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .validation-list li::before {
                content: '•';
                font-size: 18px;
            }

    .loading-state {
        text-align: center;
        padding: 80px 20px;
    }

    .spinner-large {
        width: 48px;
        height: 48px;
        border: 4px solid #e5e7eb;
        border-top-color: #3b82f6;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 16px;
    }

    .success-message {
        background: #f0fdf4;
        border: 2px solid #86efac;
        color: #166534;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 15px;
        font-weight: 500;
    }
</style>

<div class="page-container">
    <div class="top-nav">
        <button class="back-btn" @onclick="GoBack">
            <span>←</span>
            <span>Back to Quiz</span>
        </button>
    </div>

    <div class="content-wrapper">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner-large"></div>
                <p>Loading question...</p>
            </div>
        }
        else if (accessDenied)
        {
            <div class="loading-state">
                <div style="font-size: 64px; margin-bottom: 16px;">🚫</div>
                <h2 style="color: #dc2626; font-size: 24px; margin-bottom: 8px;">Access Denied</h2>
                <p style="color: #6b7280; margin-bottom: 24px;">You don't have permission to edit this question.</p>
                <button class="btn btn-secondary" @onclick="@(() => nav.NavigateTo("/teacher-home"))" style="max-width: 200px; margin: 0 auto;">
                    Go to Dashboard
                </button>
            </div>
        }
        else if (question == null)
        {
            <div class="loading-state">
                <div style="font-size: 48px; margin-bottom: 16px;">❌</div>
                <p>Question not found</p>
            </div>
        }
        else
        {
            <div class="page-header">
                <h1 class="page-title">Edit Question</h1>
                <p class="page-subtitle">Update your question and answers</p>
            </div>

            @if (showSuccess)
            {
                <div class="success-message">
                    <span style="font-size: 20px;">✓</span>
                    <span>Question updated successfully!</span>
                </div>
            }

            @if (validationErrors.Count > 0 && showErrors)
            {
                <div class="validation-summary">
                    <div class="validation-title">
                        <span>⚠️</span>
                        <span>Please fix the following errors:</span>
                    </div>
                    <ul class="validation-list">
                        @foreach (var error in validationErrors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <div class="form-card">
                <div class="form-group">
                    <label class="form-label required">Question Text</label>
                    <textarea @bind="question.QuestionText" class="form-input" placeholder="Enter your question here..." rows="4"></textarea>
                    <div class="helper-text">Write a clear and concise question for students to answer</div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <span class="hint-icon">💡</span>
                        Hint (Optional)
                    </label>
                    <textarea @bind="question.Hint" class="form-input" placeholder="Add a helpful hint..." rows="3"></textarea>
                    <div class="helper-text">Provide a hint to help students who are stuck</div>
                </div>

                <hr class="section-divider" />

                <div class="section-title">
                    <span>📝</span>
                    <span>Answer Options</span>
                </div>

                <div class="answers-container">
                    @for (int i = 0; i < question.Answers.Count; i++)
                    {
                        var index = i;
                        var answer = question.Answers[i];
                        <div class="answer-item @(answer.IsCorrect ? "correct" : "")">
                            <div class="answer-number">@((char)('A' + index))</div>
                            <div class="answer-content">
                                <div class="answer-input-row">
                                    <input type="text" @bind="answer.AnswerText" class="form-input answer-input" placeholder="@($"Answer {(char)('A' + index)}")" />
                                    <label class="correct-checkbox @(answer.IsCorrect ? "checked" : "")" @onclick="@(() => ToggleCorrect(index))">
                                        <input type="checkbox" class="checkbox-input" checked="@answer.IsCorrect" @onclick:stopPropagation />
                                        <span class="checkbox-label">Correct</span>
                                    </label>
                                    @if (question.Answers.Count > 2)
                                    {
                                        <button type="button" class="delete-answer-btn" @onclick="@(() => RemoveAnswer(index))">
                                            🗑️
                                        </button>
                                    }
                                </div>
                                @if (answer.IsCorrect)
                                {
                                    <input type="text" @bind="answer.Explanation" class="form-input" placeholder="Explanation for this correct answer (optional)" />
                                }
                            </div>
                        </div>
                    }
                </div>

                @if (question.Answers.Count < 4)
                {
                    <button type="button" class="add-answer-btn" @onclick="AddAnswer">
                        <span>➕</span>
                        <span>Add Another Answer</span>
                    </button>
                }

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="SaveQuestion" disabled="@isSaving">
                        @if (isSaving)
                        {
                            <div class="loading-spinner"></div>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>💾</span>
                            <span>Save Changes</span>
                        }
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int QuestionId { get; set; }

    private Question question;
    private List<int> answersToDelete = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private bool showErrors = false;
    private bool showSuccess = false;
    private bool accessDenied = false;
    private List<string> validationErrors = new();
    private int currentTeacherId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadQuestionAsync();
    }

    private async Task LoadQuestionAsync()
    {
        try
        {
            isLoading = true;

            //  בדיקת הרשאות - שליפת המשתמש המחובר
            var result = await session.GetAsync<Customers>("user");
            if (!result.Success || result.Value == null)
            {
                nav.NavigateTo("/login");
                return;
            }

            currentTeacherId = result.Value.user_id;

            // שליפת השאלה
            var db = new QuestionDB();
            question = await db.GetQuestionWithAnswersAsync(QuestionId);

            //  בדיקה שהשאלה קיימת
            if (question == null)
            {
                isLoading = false;
                return;
            }

            //  בדיקה שהמשתמש הנוכחי הוא המורה שיצר את השאלה
            if (question.TeacherID != currentTeacherId)
            {
                accessDenied = true;
                isLoading = false;
                return;
            }

            // אם אין תשובות, צור כמה תשובות ריקות
            if (question.Answers == null || question.Answers.Count == 0)
            {
                question.Answers = new List<Answer>();
                for (int i = 0; i < 4; i++)
                {
                    question.Answers.Add(new Answer
                    {
                        QuestionId = QuestionId,
                        AnswerText = "",
                        IsCorrect = false,
                        Explanation = ""
                    });
                }
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading question: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddAnswer()
    {
        if (question.Answers.Count < 4)
        {
            question.Answers.Add(new Answer
            {
                QuestionId = QuestionId,
                AnswerText = "",
                IsCorrect = false,
                Explanation = ""
            });
        }
    }

    private void RemoveAnswer(int index)
    {
        if (question.Answers.Count > 2)
        {
            var answer = question.Answers[index];
            
            // אם לתשובה יש ID (כלומר היא כבר קיימת במסד הנתונים), שמור אותה למחיקה
            if (answer.AnswerId > 0)
            {
                answersToDelete.Add(answer.AnswerId);
            }
            
            question.Answers.RemoveAt(index);
        }
    }

    private void ToggleCorrect(int index)
    {
        // ניתן לבחור רק תשובה אחת נכונה
        for (int i = 0; i < question.Answers.Count; i++)
        {
            question.Answers[i].IsCorrect = (i == index);
        }
    }

    private bool ValidateForm()
    {
        validationErrors.Clear();

        // בדיקת שאלה
        if (string.IsNullOrWhiteSpace(question.QuestionText))
        {
            validationErrors.Add("Question text is required");
        }

        // בדיקת תשובות
        var filledAnswers = question.Answers.Where(a => !string.IsNullOrWhiteSpace(a.AnswerText)).ToList();
        if (filledAnswers.Count < 2)
        {
            validationErrors.Add("At least 2 answers are required");
        }

        // בדיקת תשובה נכונה
        if (!question.Answers.Any(a => a.IsCorrect && !string.IsNullOrWhiteSpace(a.AnswerText)))
        {
            validationErrors.Add("You must mark one answer as correct");
        }

        return validationErrors.Count == 0;
    }

    private async Task SaveQuestion()
    {
        showErrors = true;

        if (!ValidateForm())
        {
            return;
        }

        try
        {
            isSaving = true;

            // עדכון השאלה
            var questionDb = new QuestionDB();
            await questionDb.UpdateQuestionAsync(question);

            // מחיקת תשובות שנמחקו
            var answerDb = new AnswerDB();
            foreach (var answerId in answersToDelete)
            {
                await answerDb.DeleteAnswerAsync(answerId);
            }

            // עדכון/הוספת תשובות
            foreach (var answer in question.Answers.Where(a => !string.IsNullOrWhiteSpace(a.AnswerText)))
            {
                //  וודא שה-Explanation לא null
                if (string.IsNullOrEmpty(answer.Explanation))
                {
                    answer.Explanation = "";
                }

                if (answer.AnswerId > 0)
                {
                    // עדכון תשובה קיימת
                    await answerDb.UpdateAnswerAsync(answer);
                }
                else
                {
                    // הוספת תשובה חדשה
                    answer.QuestionId = QuestionId;
                    await answerDb.InsertAnswerAsync(answer);
                }
            }

            showSuccess = true;
            await Task.Delay(1500);

            // חזרה לדף החידון
            GoBack();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error saving question: {ex.Message}");
            validationErrors.Add("An error occurred while saving. Please try again.");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        GoBack();
    }

    private void GoBack()
    {
        if (question != null)
        {
            nav.NavigateTo($"/quiz-details/{question.QuizId}");
        }
        else
        {
            nav.NavigateTo("/teacher-home");
        }
    }
}