                    <div class="section-header">
                        <div class="section-icon">✏️</div>
                        <h2 class="section-title">Edit Profile</h2>
                    </div>

                    <EditForm Model="@teacher" OnValidSubmit="@HandleUpdate">
                        <div class="form-grid">
                            <div class="form-group">
                                <label class="form-label">Full Name</label>
                                <InputText @bind-Value="teacher.FullName"
                                           class="form-input"
                                           placeholder="Enter your full name" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">Email Address</label>
                                <InputText @bind-Value="teacher.Email"
                                           class="form-input"
                                           placeholder="your@email.com" />
                            </div>

                            <div class="form-group-full">
                                <label class="form-label">New Password (leave blank to keep current)</label>
                                <InputText @bind-Value="newPassword"
                                           type="password"
                                           class="form-input"
                                           placeholder="Enter new password" />
                            </div>
                        </div>

                        <div class="preferences-section">
                            <h3 class="preferences-title">Teaching Preferences</h3>
                            <div class="preference-item">
                                <span class="preference-label">
                                    <span>📧</span>
                                    Email Notifications
