                                <div class="toggle-switch active" @onclick="() => TogglePreference(0)">
                                    <div class="toggle-slider"></div>
                                </div>
                            </div>
                            <div class="preference-item">
                                <span class="preference-label">
                                    <span>🔔</span>
                                    Student Alerts
                                </span>
                                <div class="toggle-switch active" @onclick="() => TogglePreference(1)">
                                    <div class="toggle-slider"></div>
                                </div>
                            </div>
                            <div class="preference-item">
                                <span class="preference-label">
                                    <span>📊</span>
                                    Weekly Reports
                                </span>
                                <div class="toggle-switch" @onclick="() => TogglePreference(2)">
                                    <div class="toggle-slider"></div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                <span>@(isLoading ? "⏳" : "💾")</span>
                                <span>@(isLoading ? "Saving..." : "Save Changes")</span>
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="ResetForm">
                                <span>🔄</span>
                                <span>Reset</span>
                            </button>
                        </div>

                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="message @messageClass">
                                @message
                            </div>
                        }
                    </EditForm>
                </div>

                <div class="danger-zone">
                    <div class="danger-header">
                        <div class="danger-icon">⚠️</div>
                        <h2 class="danger-title">Delete Account</h2>
                    </div>
                    <p class="danger-description">
                        <strong>Warning:</strong> Deleting your account will permanently remove all your created 
                        questions (@questionCount total), student data, and teaching history. This action cannot be undone.
                    </p>
                    <button class="btn-danger" @onclick="HandleDeleteAccount">
                        <span>🗑️</span>
                        <span>Delete Teacher Account</span>
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>

@code {
    private Customers teacher = new Customers();
    private Customers originalTeacher = new Customers();
    private CustomerDB db = new CustomerDB();
    private QuestionDB questionDb = new QuestionDB();
    private string message = string.Empty;
    private string messageClass = string.Empty;
    private bool isLoading = false;
    private string newPassword = string.Empty;
    private int questionCount = 0;

    protected override async Task OnInitializedAsync()
    {
        var result = await session.GetAsync<Customers>("user");
        if (result.Success && result.Value != null)
        {
            teacher = result.Value;
            
            originalTeacher.user_id = teacher.user_id;
            originalTeacher.FullName = teacher.FullName;
            originalTeacher.Email = teacher.Email;
            originalTeacher.Password = teacher.Password;
            originalTeacher.Role = teacher.Role;
            originalTeacher.CreatedAt = teacher.CreatedAt;

            questionCount = await questionDb.GetQuestionCountAsync(teacher.user_id);
        }
        else
        {
            nav.NavigateTo("/login");
        }
    }

    private string GetInitials()
    {
        if (string.IsNullOrWhiteSpace(teacher.FullName))
            return "T";

        var parts = teacher.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return parts[0][0].ToString().ToUpper();
    }

    private async Task HandleUpdate()
    {
        isLoading = true;
        message = string.Empty;
        StateHasChanged();

        await Task.Delay(400);

        try
        {
            if (string.IsNullOrWhiteSpace(teacher.FullName) || string.IsNullOrWhiteSpace(teacher.Email))
            {
                message = "Name and email are required fields.";
                messageClass = "error-msg";
                isLoading = false;
                return;
            }

            if (!string.IsNullOrWhiteSpace(newPassword))
            {
                teacher.Password = newPassword;
            }

            var result = await db.UpdateAsync(teacher);

            if (result > 0)
            {
                message = "✅ Profile updated successfully!";
                messageClass = "success-msg";
                newPassword = string.Empty;
                
                await session.SetAsync("user", teacher);
                
                originalTeacher.FullName = teacher.FullName;
                originalTeacher.Email = teacher.Email;
            }
            else
            {
                message = "Failed to update profile. Please try again.";
                messageClass = "error-msg";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            messageClass = "error-msg";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ResetForm()
    {
        teacher.FullName = originalTeacher.FullName;
        teacher.Email = originalTeacher.Email;
        newPassword = string.Empty;
        message = string.Empty;
    }

    private void TogglePreference(int index)
    {
        // Toggle preference logic here
        StateHasChanged();
    }

    private async Task HandleDeleteAccount()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            "⚠️ CRITICAL WARNING ⚠️\n\nAre you absolutely certain you want to delete your teacher account?\n\nThis will permanently delete:\n• All your questions (" + questionCount + " total)\n• All student progress data\n• Your entire teaching history\n\nThis action is IRREVERSIBLE!\n\nAre you sure?");

        if (confirmed)
        {
            try
            {
                await db.DeleteAsync(teacher.user_id);
                await session.DeleteAsync("user");
                nav.NavigateTo("/login");
            }
            catch (Exception ex)
            {
                message = $"Error deleting account: {ex.Message}";
                messageClass = "error-msg";
            }
        }
    }
}