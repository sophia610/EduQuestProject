@page "/quiz-statistics/{QuizId:int}"
@using DBL
@using Models
@inject NavigationManager nav
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage session

<PageTitle>Quiz Statistics | EduQuest</PageTitle>

<style>
    body {
        margin: 0;
        background: #f5f7fa;
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    }

    .page-container {
        min-height: 100vh;
        background: #f5f7fa;
    }

    .top-nav {
        background: white;
        padding: 16px 32px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .back-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        background: none;
        border: none;
        color: #3b82f6;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        padding: 8px 16px;
        border-radius: 8px;
        transition: all 0.2s;
    }

        .back-btn:hover {
            background: #eff6ff;
        }

    .content-wrapper {
        max-width: 1400px;
        margin: 0 auto;
        padding: 32px;
    }

    .page-header {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        border-radius: 20px;
        padding: 40px;
        color: white;
        margin-bottom: 32px;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
        }

    .header-content {
        position: relative;
    }

    .page-title {
        font-size: 32px;
        font-weight: 700;
        margin: 0 0 8px 0;
    }

    .page-subtitle {
        font-size: 16px;
        opacity: 0.9;
        margin: 0;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin-bottom: 16px;
    }

        .stat-icon.blue {
            background: #eff6ff;
        }

        .stat-icon.green {
            background: #f0fdf4;
        }

        .stat-icon.orange {
            background: #fff7ed;
        }

        .stat-icon.purple {
            background: #f5f3ff;
        }

    .stat-value {
        font-size: 28px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 4px;
    }

    .stat-label {
        font-size: 14px;
        color: #6b7280;
        font-weight: 500;
    }

    .section {
        background: white;
        border-radius: 16px;
        padding: 28px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }

    .section-title {
        font-size: 20px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 20px;
    }

    .student-table {
        width: 100%;
        border-collapse: collapse;
    }

        .student-table th {
            background: #f9fafb;
            padding: 12px 16px;
            text-align: left;
            font-size: 14px;
            font-weight: 600;
            color: #374151;
            border-bottom: 2px solid #e5e7eb;
        }

        .student-table td {
            padding: 16px;
            border-bottom: 1px solid #f3f4f6;
            font-size: 15px;
            color: #1f2937;
        }

        .student-table tr:hover {
            background: #f9fafb;
        }

    .student-name {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .student-avatar {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 14px;
    }

    .score-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 700;
    }

        .score-badge.excellent {
            background: #dcfce7;
            color: #16a34a;
        }

        .score-badge.good {
            background: #dbeafe;
            color: #3b82f6;
        }

        .score-badge.needsWork {
            background: #fed7aa;
            color: #ea580c;
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #9ca3af;
    }

    .empty-icon {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .loading-state {
        text-align: center;
        padding: 80px 20px;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #e5e7eb;
        border-top-color: #3b82f6;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 16px;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }
</style>

<div class="page-container">
    <div class="top-nav">
        <button class="back-btn" @onclick="GoBack">
            <span>←</span>
            <span>Back to Quiz</span>
        </button>
    </div>

    <div class="content-wrapper">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading statistics...</p>
            </div>
        }
        else if (quiz == null)
        {
            <div class="empty-state">
                <div class="empty-icon">❌</div>
                <p>Quiz not found</p>
            </div>
        }
        else
        {
            <div class="page-header">
                <div class="header-content">
                    <h1 class="page-title">📊 @quiz.QuizName - Statistics</h1>
                    <p class="page-subtitle">Track student performance and quiz analytics</p>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon blue">👥</div>
                    <div class="stat-value">@studentResults.Count</div>
                    <div class="stat-label">Students Attempted</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon green">📊</div>
                    <div class="stat-value">@averageScore%</div>
                    <div class="stat-label">Average Score</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon orange">⏱️</div>
                    <div class="stat-value">@averageTime</div>
                    <div class="stat-label">Avg Time (sec)</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon purple">⭐</div>
                    <div class="stat-value">@averageRating.ToString("F1")</div>
                    <div class="stat-label">Avg Rating</div>
                </div>
            </div>

            <div class="section">
                <h2 class="section-title">Student Performance</h2>

                @if (studentResults.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-icon">📭</div>
                        <p>No students have taken this quiz yet</p>
                    </div>
                }
                else
                {
                    <table class="student-table">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Score</th>
                                <th>Questions Answered</th>
                                <th>Avg Time per Question</th>
                                <th>Hints Used</th>
                                <th>Completed At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in studentResults)
                            {
                                <tr>
                                    <td>
                                        <div class="student-name">
                                            <div class="student-avatar">@GetInitials(result.StudentName)</div>
                                            <span>@result.StudentName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="score-badge @GetScoreClass(result.Score)">
                                            @result.Score%
                                        </span>
                                    </td>
                                    <td>@result.QuestionsAnswered</td>
                                    <td>@result.AvgTimePerQuestion sec</td>
                                    <td>@result.HintsUsed</td>
                                    <td>@result.CompletedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int QuizId { get; set; }

    private Quiz quiz;
    private List<StudentQuizResult> studentResults = new();
    private bool isLoading = true;

    private int averageScore = 0;
    private int averageTime = 0;
    private double averageRating = 0;

    private class StudentQuizResult
    {
        public string StudentName { get; set; }
        public int Score { get; set; }
        public int QuestionsAnswered { get; set; }
        public int AvgTimePerQuestion { get; set; }
        public int HintsUsed { get; set; }
        public DateTime CompletedAt { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            isLoading = true;

            // טעינת החידון
            var quizDb = new QuizDB();
            quiz = await quizDb.GetQuizWithQuestionsAsync(QuizId);

            if (quiz == null) return;

            // ✅ טעינת כל התוצאות של החידון (לא מסונן לפי student)
            var resultDb = new ResultDB();
            var allResults = await resultDb.GetAllQuizResultsAsync(QuizId);

            if (allResults.Count == 0)
            {
                isLoading = false;
                return;
            }

            // קיבוץ לפי תלמיד
            var groupedByStudent = allResults.GroupBy(r => r.student_id);

            var customerDb = new CustomerDB();
            foreach (var group in groupedByStudent)
            {
                var studentId = group.Key;
                var results = group.ToList();

                var student = await customerDb.SelectByPkAsync(studentId);
                if (student == null) continue;

                var score = results.FirstOrDefault()?.score ?? 0;
                var questionsAnswered = results.Count;
                var avgTime = (int)results.Average(r => r.time_taken);
                var hintsUsed = results.Count(r => r.used_hint == 1);
                var completedAt = results.Max(r => r.answered_at);

                studentResults.Add(new StudentQuizResult
                    {
                        StudentName = student.FullName,
                        Score = score,
                        QuestionsAnswered = questionsAnswered,
                        AvgTimePerQuestion = avgTime,
                        HintsUsed = hintsUsed,
                        CompletedAt = completedAt
                    });
            }

            // חישוב ממוצעים
            if (studentResults.Count > 0)
            {
                averageScore = (int)studentResults.Average(s => s.Score);
                averageTime = (int)studentResults.Average(s => s.AvgTimePerQuestion);
            }

            // חישוב דירוג ממוצע (רק דירוגים שאינם 0)
            if (allResults.Count > 0)
            {
                var rated = allResults.Where(r => r.rating > 0).ToList();
                averageRating = rated.Count > 0 ? rated.Average(r => r.rating) : 0;
            }

            // מיון לפי ציון (גבוה לנמוך)
            studentResults = studentResults.OrderByDescending(s => s.Score).ToList();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading statistics: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "S";
        var parts = name.Split(' ');
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name[0].ToString().ToUpper();
    }

    private string GetScoreClass(int score)
    {
        if (score >= 80) return "excellent";
        if (score >= 60) return "good";
        return "needsWork";
    }

    private void GoBack()
    {
        nav.NavigateTo($"/quiz-details/{QuizId}");
    }
}