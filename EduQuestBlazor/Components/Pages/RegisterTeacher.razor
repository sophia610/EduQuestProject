@page "/register-teacher"
@using Models
@using DBL
@inject NavigationManager NavManager

<PageTitle>EduQuest | Teacher Registration</PageTitle>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
        background: #f8f9fb;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        position: relative;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .background-pattern {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0.03;
        background-image: linear-gradient(30deg, #667eea 12%, transparent 12.5%, transparent 87%, #667eea 87.5%, #667eea), linear-gradient(150deg, #667eea 12%, transparent 12.5%, transparent 87%, #667eea 87.5%, #667eea);
        background-size: 80px 140px;
        background-position: 0 0, 40px 70px;
    }

    /* Left Side */
    .left-side {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 60px;
        position: relative;
        z-index: 1;
    }

    .brand-content {
        max-width: 500px;
        color: #1f2937;
    }

    .logo-container {
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 40px;
        animation: fadeInDown 0.6s ease-out;
    }

    .logo-icon {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 700;
        color: white;
        box-shadow: 0 8px 24px rgba(102, 126, 234, 0.25);
    }

    .logo-text {
        font-size: 38px;
        font-weight: 700;
        color: #1f2937;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .welcome-title {
        font-size: 48px;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 20px;
        animation: fadeInUp 0.6s ease-out 0.2s both;
    }

    .welcome-description {
        font-size: 18px;
        color: #6b7280;
        line-height: 1.7;
        margin-bottom: 40px;
        animation: fadeInUp 0.6s ease-out 0.3s both;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .benefit-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .benefit-item {
        display: flex;
        align-items: center;
        gap: 16px;
        animation: fadeInLeft 0.6s ease-out both;
    }

        .benefit-item:nth-child(1) {
            animation-delay: 0.4s;
        }

        .benefit-item:nth-child(2) {
            animation-delay: 0.5s;
        }

        .benefit-item:nth-child(3) {
            animation-delay: 0.6s;
        }

    @@keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .benefit-icon {
        width: 48px;
        height: 48px;
        background: white;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        flex-shrink: 0;
    }

    .check-icon {
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 14px;
        font-weight: 700;
    }

    .benefit-text {
        font-size: 16px;
        font-weight: 600;
        color: #374151;
    }

    /* Right Side - Form */
    .right-side {
        flex: 0 0 540px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px;
        position: relative;
        z-index: 1;
    }

    .register-card {
        width: 100%;
        max-width: 460px;
        background: white;
        border-radius: 20px;
        padding: 48px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        animation: fadeInRight 0.6s ease-out;
    }

    @@keyframes fadeInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .form-header {
        margin-bottom: 32px;
    }

    .form-title {
        font-size: 32px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 8px;
    }

    .form-subtitle {
        font-size: 15px;
        color: #6b7280;
    }

    .role-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #eff6ff;
        color: #667eea;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
    }

    .form-input {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 15px;
        font-family: 'Poppins', sans-serif;
        transition: all 0.3s;
        background: #f9fafb;
    }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.08);
        }

    .register-btn {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 14px rgba(102, 126, 234, 0.3);
        margin-top: 8px;
    }

        .register-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

        .register-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .message {
        margin-top: 16px;
        padding: 14px 16px;
        border-radius: 10px;
        font-size: 14px;
        font-weight: 500;
        animation: slideIn 0.4s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .success-msg {
        background: #f0fdf4;
        border-left: 4px solid #10b981;
        color: #16a34a;
    }

    .error-msg {
        background: #fef2f2;
        border-left: 4px solid #ef4444;
        color: #dc2626;
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 28px 0;
        color: #9ca3af;
        font-size: 13px;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e5e7eb;
        }

        .divider span {
            padding: 0 16px;
            font-weight: 500;
        }

    .back-link {
        text-align: center;
        font-size: 14px;
        color: #6b7280;
    }

        .back-link a {
            color: #667eea;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.2s;
        }

            .back-link a:hover {
                color: #764ba2;
                text-decoration: underline;
            }

    /* Responsive */
    @@media (max-width: 1024px) {
        .register-container {
            flex-direction: column;
        }

        .left-side {
            padding: 60px 40px 40px;
        }

        .right-side {
            flex: 1;
            padding: 40px;
        }

        .welcome-title {
            font-size: 36px;
        }
    }

    @@media (max-width: 640px) {
        .register-card {
            padding: 36px 28px;
        }

        .form-title {
            font-size: 26px;
        }

        .left-side {
            padding: 40px 24px;
        }

        .welcome-title {
            font-size: 28px;
        }

        .welcome-description {
            font-size: 16px;
        }
    }
</style>

<div class="register-container">
    <div class="background-pattern"></div>

    <div class="left-side">
        <div class="brand-content">
            <div class="logo-container">
                <div class="logo-icon">Q</div>
                <div class="logo-text">EduQuest</div>
            </div>

            <h1 class="welcome-title">
                Inspire the Next Generation
            </h1>

            <p class="welcome-description">
                Join thousands of educators creating engaging quizzes and empowering students to achieve excellence.
            </p>

            <div class="benefit-list">
                <div class="benefit-item">
                    <div class="benefit-icon">
                        <div class="check-icon">✓</div>
                    </div>
                    <span class="benefit-text">Create quizzes in minutes</span>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">
                        <div class="check-icon">✓</div>
                    </div>
                    <span class="benefit-text">Monitor student progress in real-time</span>
                </div>
                <div class="benefit-item">
                    <div class="benefit-icon">
                        <div class="check-icon">✓</div>
                    </div>
                    <span class="benefit-text">Provide personalized tutoring support</span>
                </div>
            </div>
        </div>
    </div>

    <div class="right-side">
        <div class="register-card">
            <div class="form-header">
                <div class="role-badge">
                    <span>👨‍🏫</span>
                    <span>Teacher Registration</span>
                </div>
                <h2 class="form-title">Create your account</h2>
                <p class="form-subtitle">Start inspiring students today</p>
            </div>

            <EditForm Model="@teacher" OnValidSubmit="@HandleRegister">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label class="form-label">Full Name</label>
                    <InputText @bind-Value="teacher.FullName"
                               class="form-input"
                               placeholder="Enter your full name" />
                </div>

                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <InputText @bind-Value="teacher.Email"
                               class="form-input"
                               placeholder="your@email.com" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <InputText @bind-Value="teacher.Password"
                               type="password"
                               class="form-input"
                               placeholder="Create a strong password" />
                </div>

                <button type="submit"
                        class="register-btn"
                        disabled="@isLoading">
                    @(isLoading ? "Creating your account..." : "Register Now")
                </button>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="message @messageClass">
                        @message
                    </div>
                }

                <div class="divider">
                    <span>Already have an account?</span>
                </div>

                <div class="back-link">
                    <a href="/login">Sign in here</a>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Customers teacher = new Customers();
    private CustomerDB db = new CustomerDB();
    private string message = string.Empty;
    private string messageClass = string.Empty;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        isLoading = true;
        message = string.Empty;
        StateHasChanged();

        await Task.Delay(400);

        try
        {
            if (string.IsNullOrWhiteSpace(teacher.FullName) ||
                string.IsNullOrWhiteSpace(teacher.Email) ||
                string.IsNullOrWhiteSpace(teacher.Password))
            {
                message = "Please fill in all fields.";
                messageClass = "error-msg";
                isLoading = false;
                return;
            }

            teacher.Role = 1;
            teacher.CreatedAt = DateTime.Now;

            var existing = await db.SelectByEmailAsync(teacher.Email);
            if (existing != null)
            {
                message = "This email is already registered. Please sign in instead.";
                messageClass = "error-msg";
            }
            else
            {
                await db.InsertGetObjAsync(teacher);
                message = "Registration successful! Redirecting to login...";
                messageClass = "success-msg";

                await Task.Delay(1500);
                NavManager.NavigateTo("/login");
            }
        }
        catch (Exception ex)
        {
            message = $"Registration failed: {ex.Message}";
            messageClass = "error-msg";
        }
        finally
        {
            isLoading = false;
        }
    }
}