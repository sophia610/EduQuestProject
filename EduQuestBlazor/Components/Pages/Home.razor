@page "/"

<PageTitle>EduQuest | Home</PageTitle>

<div class="home-container">
    <canvas id="backgroundCanvas"></canvas>

    <div class="home-content">
        <h1 class="logo">EduQuest</h1>
        <p class="tagline">Learn. Play. Succeed.</p>

        <div class="buttons">
            <button class="btn login-btn" @onclick="GoToLogin">Login</button>
            <button class="btn signup-btn" @onclick="GoToSignup">Sign Up</button>
        </div>
    </div>
</div>

<style>
/* בסיס */
body, html {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', sans-serif;
    overflow: hidden;
}

/* מיכל עיקרי */
.home-container {
    position: relative;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    color: white;
    background: linear-gradient(135deg, #6a11cb, #2575fc);
}

/* תוכן מעל הרקע */
.home-content {
    position: relative;
    z-index: 2;
    animation: fadeInUp 1.5s ease forwards;
}

.logo {
    font-size: 5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    letter-spacing: 3px;
    text-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.tagline {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    text-shadow: 0 2px 10px rgba(0,0,0,0.2);
}

.buttons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
}

.btn {
    padding: 1rem 2.5rem;
    font-size: 1.2rem;
    border-radius: 50px;
    border: none;
    cursor: pointer;
    font-weight: 700;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.login-btn {
    background: linear-gradient(135deg, #ff416c, #ff4b2b);
    color: white;
}

.login-btn:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 10px 20px rgba(0,0,0,0.3);
}

.signup-btn {
    background: transparent;
    color: white;
    border: 2px solid white;
}

.signup-btn:hover {
    background: rgba(255,255,255,0.2);
    transform: translateY(-5px) scale(1.05);
}


keyframes fadeInUp {
    0% { opacity: 0; transform: translateY(50px); }
    100% { opacity: 1; transform: translateY(0); }
}

#backgroundCanvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}
</style>

<script>
    const canvas = document.getElementById('backgroundCanvas');
    const ctx = canvas.getContext('2d');
    let width, height;
    let particles = [];

    function resizeCanvas() {
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    window.addEventListener('resize', resizeCanvas);
    resizeCanvas();

    // יצירת חלקיקים
    const particleCount = 80;
    for(let i=0;i<particleCount;i++){
        particles.push({
            x: Math.random()*width,
            y: Math.random()*height,
            radius: Math.random()*3+1,
            dx: (Math.random()-0.5)*1.5,
            dy: (Math.random()-0.5)*1.5
        });
    }

    function animate(){
        ctx.clearRect(0,0,width,height);
        particles.forEach(p=>{
            p.x += p.dx;
            p.y += p.dy;

            if(p.x<0 || p.x>width) p.dx*=-1;
            if(p.y<0 || p.y>height) p.dy*=-1;

            ctx.beginPath();
            ctx.arc(p.x,p.y,p.radius,0,Math.PI*2);
            ctx.fillStyle = 'rgba(255,255,255,0.7)';
            ctx.fill();
        });
        requestAnimationFrame(animate);
    }
    animate();
</script>

@code {
    [Inject] NavigationManager Navigation { get; set; }

    void GoToLogin() => Navigation.NavigateTo("/Login");
    void GoToSignup() => Navigation.NavigateTo("/Register2");
}
