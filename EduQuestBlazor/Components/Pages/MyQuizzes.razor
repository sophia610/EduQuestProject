    private string GetTopicNameFromId(string topicId, List<Topic> allTopics)
    {
        if (string.IsNullOrEmpty(topicId)) return "Unknown";

        try
        {
            int id = int.Parse(topicId);
            return allTopics.FirstOrDefault(t => t.topic_id == id)?.topic_name ?? "Unknown Topic";
        }
        catch
        {
            return "Unknown";
        }
    }

    private string GetTopicName(string topicId)
    {
        if (string.IsNullOrEmpty(topicId)) return "Unknown";

        try
        {
            int id = int.Parse(topicId);
            var topicDb = new TopicDB();
            var allTopics = topicDb.GetAllTopicsAsync().Result;
            return allTopics.FirstOrDefault(t => t.topic_id == id)?.topic_name ?? "Unknown Topic";
        }
        catch
        {
            return "Unknown";
        }
    }

    private string GetSubjectNameFromTopicId(string topicId, List<Topic> allTopics, List<Subject> allSubjects)
    {
        if (string.IsNullOrEmpty(topicId)) return "";

        try
        {
            if (allTopics == null || allSubjects == null)
            {
                var topicDb = new TopicDB();
                allTopics = topicDb.GetAllTopicsAsync().Result;

                var subjectDb = new SubjectDB();
                allSubjects = subjectDb.GetAllSubjectsAsync().Result;
            }

            var topic = allTopics.FirstOrDefault(t => t.topic_id == int.Parse(topicId));
            if (topic == null) return "";

            var subject = allSubjects.FirstOrDefault(s => s.subject_id == topic.subject_id);
            return subject?.subject_name ?? "";
        }
        catch
        {
            return "";
        }
    }

