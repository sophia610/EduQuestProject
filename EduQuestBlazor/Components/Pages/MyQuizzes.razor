<div class="dashboard">
    <aside class="sidebar">
        <div class="logo">
            <div class="logo-icon">Q</div>
            <div class="logo-text">EduQuest</div>
        </div>
        <div class="sidebar-menu">
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/teacher-home"))">
                <span>🏠</span>
                <span>Dashboard</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/create-quiz"))">
                <span>➕</span>
                <span>Quick Create</span>
            </button>
            <button class="sidebar-item active">
                <span>📚</span>
                <span>My Quizzes</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/requests"))">
                <span>📬</span>
                <span>Requests</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/students"))">
                <span>👥</span>
                <span>Students</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/profile-teacher"))">
                <span>⚙️</span>
                <span>Settings</span>
            </button>
        </div>
    </aside>

    <main class="main-content">
        <div class="header">
            <div>
                <h1 class="page-title">My Quizzes</h1>
                <p class="page-subtitle">Manage and track all your created quizzes</p>
            </div>
            <div class="header-actions">
                <button class="btn-create" @onclick="CreateNewQuiz">
                    <span>➕</span>
                    <span>Create New Quiz</span>
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="success-message">
                <span style="font-size: 20px;">✓</span>
                <span>@successMessage</span>
            </div>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-message">
                <span style="font-size: 20px;">✗</span>
                <span>@errorMessage</span>
            </div>
        }

        <div class="stats-bar">
            <div class="stat-card">
                <div class="stat-icon purple">📝</div>
                <div class="stat-value">@totalQuizzes</div>
                <div class="stat-label">Total Quizzes</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon blue">👥</div>
                <div class="stat-value">@totalStudents</div>
                <div class="stat-label">Students Reached</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon green">✓</div>
                <div class="stat-value">@totalCompletions</div>
                <div class="stat-label">Completions</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon orange">📊</div>
                <div class="stat-value">@averageScore%</div>
                <div class="stat-label">Avg Score</div>
            </div>
        </div>

        <div class="filters-bar">
            <div class="filter-group">
                <label class="filter-label">Subject</label>
                <select class="filter-select" value="@selectedSubject" @onchange="OnSubjectChange">
                    <option value="">All Subjects</option>
                    @foreach (var subject in subjects)
                    {
                        <option value="@subject">@subject</option>
                    }
                </select>
            </div>
            <div class="filter-group">
                <label class="filter-label">Topic</label>
                <select class="filter-select" value="@selectedTopic" @onchange="OnTopicChange">
                    <option value="">All Topics</option>
                    @foreach (var topic in topics)
                    {
                        <option value="@topic">@topic</option>
                    }
                </select>
            </div>
            <div class="search-box">
                <label class="filter-label">Search</label>
                <input type="text"
                       class="search-input"
                       placeholder="Search by question text..."
                       @bind="searchQuery"
                       @oninput="OnSearchInput" />
            </div>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="loading-spinner"></div>
                <p style="color: #6b7280; font-weight: 500;">Loading your quizzes...</p>
            </div>
        }
        else if (filteredQuestions == null || filteredQuestions.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-icon">📚</div>
                <h2 class="empty-title">No Quizzes Found</h2>
                <p class="empty-text">
                    @if (string.IsNullOrEmpty(searchQuery) && string.IsNullOrEmpty(selectedSubject) && string.IsNullOrEmpty(selectedTopic))
                    {
                        <text>You haven't created any quizzes yet. Start creating engaging content for your students!</text>
                    }
                    else
                    {
                        <text>No quizzes match your search criteria. Try adjusting your filters.</text>
                    }
                </p>
                <button class="btn-create" @onclick="CreateNewQuiz">
                    <span>➕</span>
                    <span>Create Your First Quiz</span>
                </button>
            </div>
        }
        else
        {
            <div class="quizzes-grid">
                @foreach (var question in filteredQuestions)
                {
                    <div class="quiz-card">
                        <div class="quiz-header">
                            <span class="quiz-topic">@GetTopicName(question.TopicName)</span>
                            <span class="quiz-date">@question.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="quiz-question">@question.QuestionText</div>
                        @if (!string.IsNullOrEmpty(question.Hint))
                        {
                            <div style="font-size: 13px; color: #9ca3af; margin-bottom: 12px;">
                                💡 Hint: @question.Hint
                            </div>
                        }
                        <div class="quiz-meta">
                            <span>
                                <span>📝</span>
                                <span>4 Answers</span>
                            </span>
                            <span>
                                <span>👥</span>
                                <span>@GetRandomStudentCount() students</span>
                            </span>
                        </div>
                        <div class="quiz-actions">
                            <button class="action-btn btn-view" @onclick="@(() => ViewQuiz(question.QuestionID))">
                                <span>👁</span>
                                <span>View</span>
                            </button>
                            <button class="action-btn btn-edit" @onclick="@(() => EditQuiz(question.QuestionID))">
                                <span>✏️</span>
                                <span>Edit</span>
                            </button>
                            <button class="action-btn btn-delete" @onclick="@(() => ShowDeleteModal(question.QuestionID))">
                                <span>🗑️</span>
                                <span>Delete</span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </main>
</div>

@if (showDeleteModal)
{
    <div class="modal-overlay" @onclick="HideDeleteModal">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <div class="modal-icon">⚠️</div>
                <h2 class="modal-title">Delete Quiz?</h2>
            </div>
            <p class="modal-text">
                Are you sure you want to delete this quiz? This action cannot be undone and will remove all associated data.
            </p>
            <div class="modal-actions">
                <button class="modal-btn btn-cancel" @onclick="HideDeleteModal">Cancel</button>
                <button class="modal-btn btn-confirm" @onclick="ConfirmDelete">Delete</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Quiz> allQuizzes;
    private List<Quiz> filteredQuizzes;
    private List<string> subjects = new List<string>();
    private List<string> topics = new List<string>();

    private string selectedSubject = "";
    private string selectedTopic = "";
    private string searchQuery = "";

    private int teacherId = 0;
    private bool isLoading = true;
    private string successMessage = "";
    private string errorMessage = "";

    private bool showDeleteModal = false;
    private int questionToDelete = 0;

    private int totalQuizzes = 0;
    private int totalStudents = 156;
    private int totalCompletions = 842;
    private int averageScore = 78;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        try
        {
            var result = await session.GetAsync<Customers>("user");
            if (result.Success && result.Value != null)
            {
                teacherId = result.Value.user_id;
                System.Diagnostics.Debug.WriteLine($"✅ Logged in as Teacher ID: {teacherId}, Name: {result.Value.FullName}");

                await LoadQuizzes();
            }
            else
            {
                System.Diagnostics.Debug.WriteLine("❌ No user session found - redirecting to login");
                nav.NavigateTo("/login");
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"❌ OnInitializedAsync Error: {ex.Message}");
            errorMessage = $"Initialization error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadQuizzes()
    {
        try
        {
            var quizDb = new QuizDB();
            allQuizzes = await quizDb.GetQuizzesByTeacherAsync(teacherId);

            totalQuizzes = allQuizzes.Count;

            // חישוב סטטיסטיקות
            subjects = allQuizzes
                .Select(q => GetSubjectName(q.SubjectId))
                .Distinct()
                .OrderBy(s => s)
                .ToList();

            filteredQuizzes = allQuizzes;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private void OnSubjectChange(ChangeEventArgs e)
    {
        selectedSubject = e.Value?.ToString() ?? "";
        FilterQuizzes();
    }

    private void OnTopicChange(ChangeEventArgs e)
    {
        selectedTopic = e.Value?.ToString() ?? "";
        FilterQuizzes();
    }

    private void FilterQuizzes()
    {
        filteredQuizzes = allQuizzes.Where(q =>
        {
            bool matchesSubject = string.IsNullOrEmpty(selectedSubject) ||
                GetSubjectName(q.SubjectId).Equals(selectedSubject, StringComparison.OrdinalIgnoreCase);

            bool matchesTopic = string.IsNullOrEmpty(selectedTopic) ||
                GetTopicName(q.TopicId).Equals(selectedTopic, StringComparison.OrdinalIgnoreCase);

            bool matchesSearch = string.IsNullOrEmpty(searchQuery) ||
                q.QuizName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                q.Questions.Any(question => question.QuestionText.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

            return matchesSubject && matchesTopic && matchesSearch;
        }).ToList();
    }

