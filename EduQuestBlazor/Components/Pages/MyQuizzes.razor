    }

    .modal-title {
        font-size: 24px;
        font-weight: 700;
        color: #1f2937;
    }

    .modal-text {
        color: #6b7280;
        font-size: 15px;
        line-height: 1.6;
        margin-bottom: 24px;
    }

    .modal-actions {
        display: flex;
        gap: 12px;
    }

    .modal-btn {
        flex: 1;
        padding: 14px;
        border: none;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-cancel {
        background: #f3f4f6;
        color: #374151;
    }

        .btn-cancel:hover {
            background: #e5e7eb;
        }

    .btn-confirm {
        background: #ef4444;
        color: white;
    }

        .btn-confirm:hover {
            background: #dc2626;
        }

    .success-message,
    .error-message {
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        animation: slideIn 0.4s;
    }

    @@keyframes slideIn {
