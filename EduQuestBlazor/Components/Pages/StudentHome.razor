                    <h1 class="greeting">Hello, @studentName!</h1>
                    <p class="greeting-sub">Ready to continue learning?</p>
                </div>
                <div class="header-actions">
                    <button class="logout-btn" @onclick="Logout">Logout</button>
                    <div class="user-avatar">@GetInitials(studentName)</div>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon purple">📝</div>
                    <div class="stat-value">@totalAvailableQuizzes</div>
                    <div class="stat-label">Available Quizzes</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon green">✓</div>
                    <div class="stat-value">@completedQuizzes</div>
                    <div class="stat-label">Completed</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon orange">🔥</div>
                    <div class="stat-value">@dayStreak</div>
                    <div class="stat-label">Day Streak</div>
                </div>
            </div>

            <div class="section">
                <div class="section-header">
                    <h2 class="section-title">Popular Quizzes</h2>
                    <span class="view-all" @onclick="@(()=>nav.NavigateTo("/student-quizzes"))">View all →</span>
                </div>

                @if (allQuizzes == null)
                {
                    <div class="empty-state">
                        <div class="empty-icon">⏳</div>
                        <p>Loading quizzes...</p>
                    </div>
                }
                else if (allQuizzes.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-icon">📚</div>
                        <p>No quizzes available yet. Check back soon!</p>
                    </div>
                }
                else
                {
                    <div class="quiz-grid">
                        @foreach (var quiz in allQuizzes.Take(4))
                        {
                            <div class="quiz-card" @onclick="@(()=>nav.NavigateTo($"/take-quiz/{quiz.QuizId}"))">
                                <div class="quiz-topic">@quiz.QuizName</div>
                                <div class="quiz-meta">
                                    <span>📝 @quiz.Questions.Count questions</span>
                                    <span>⏱️ @(quiz.Questions.Count * 2) min</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="section">
                <div class="section-header">
                    <h2 class="section-title">Recent Activity</h2>
                </div>
                @if (recentActivity == null || recentActivity.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-icon">📊</div>
                        <p>No recent activity. Start taking quizzes!</p>
                    </div>
                }
                else
                {
                    <div class="quiz-grid">
                        @foreach (var activity in recentActivity.Take(4))
                        {
                            <div class="quiz-card">
                                <div class="quiz-topic">@activity.QuizName</div>
                                <div class="quiz-meta">
