    private string GetRelativeTime(DateTime date)
    {
        var ts = DateTime.Now - date;
        if (ts.TotalMinutes < 60) return $"{(int)ts.TotalMinutes} min ago";
        if (ts.TotalHours < 24) return $"{(int)ts.TotalHours} hours ago";
        if (ts.TotalDays < 7) return $"{(int)ts.TotalDays} days ago";
        if (ts.TotalDays < 30) return $"{(int)(ts.TotalDays / 7)} weeks ago";
        return date.ToString("MMM dd, yyyy");
    }

