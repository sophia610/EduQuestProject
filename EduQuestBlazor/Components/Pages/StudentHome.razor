@code {
    private string studentName = "";
    private int studentId = 0;
    private List<Quiz> allQuizzes;

    // ✅ נתונים דינמיים
    private int totalAvailableQuizzes = 0;
    private int completedQuizzes = 0;
    private int dayStreak = 0;
    private int totalQuestionsAnswered = 0;
    private int overallAccuracy = 0;
    private int totalStudyHours = 0;

    // ✅ רשימות דינמיות
    private List<RecentActivityItem> recentActivity;
    private List<SubjectProgress> subjectProgress;
    private List<Achievement> achievements;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var result = await session.GetAsync<Customers>("user");
            if (result.Success && result.Value != null)
            {
                studentName = result.Value.FullName;
                studentId = result.Value.user_id;

                // טעינת כל הנתונים
                await LoadAllData();
            }
            else
            {
                nav.NavigateTo("/login");
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error in OnInitializedAsync: {ex.Message}");
            nav.NavigateTo("/login");
        }
    }

    private async Task LoadAllData()
    {
        try
        {
            var quizDb = new QuizDB();
            var resultDb = new ResultDB();

            // 1. טעינת כל החידונים הזמינים
            allQuizzes = await quizDb.GetAllQuizzesAsync();
            totalAvailableQuizzes = allQuizzes.Count;

            // 2. טעינת כל התוצאות של התלמיד
            var allResults = await resultDb.GetAllStudentResultsAsync(studentId);

            // 3. חישוב חידונים שהושלמו (ייחודיים)
            completedQuizzes = allResults
                .Select(r => r.quiz_id)
                .Distinct()
                .Count();

            // 4. חישוב Day Streak (ימים רצופים של פעילות)
            dayStreak = CalculateDayStreak(allResults);

            // 5. חישוב סך שאלות שנענו
            totalQuestionsAnswered = allResults.Count;

            // 6. חישוב דיוק כללי
            if (totalQuestionsAnswered > 0)
            {
                int correctAnswers = allResults.Count(r => r.is_correct == 1);
                overallAccuracy = (int)Math.Round((double)correctAnswers / totalQuestionsAnswered * 100);
            }

            // 7. חישוב זמן לימוד (בשעות) - מסך הזמן שלקח לענות על שאלות
            totalStudyHours = (int)Math.Round(allResults.Sum(r => r.time_taken) / 3600.0);

            // 8. טעינת פעילות אחרונה
            await LoadRecentActivity(allResults);

            // 9. טעינת התקדמות לפי נושאים
            await LoadSubjectProgress(allResults);

            // 10. טעינת הישגים
            LoadAchievements(allResults);

            System.Diagnostics.Debug.WriteLine($"Data loaded successfully for student {studentId}");
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private int CalculateDayStreak(List<Result> results)
    {
        if (results.Count == 0) return 0;

        var sortedDates = results
            .Select(r => r.answered_at.Date)
            .Distinct()
            .OrderByDescending(d => d)
            .ToList();

        if (sortedDates.Count == 0) return 0;

        // בדיקה אם יש פעילות היום או אתמול
        var today = DateTime.Now.Date;
        if (sortedDates[0] != today && sortedDates[0] != today.AddDays(-1))
            return 0;

        int streak = 1;
        for (int i = 1; i < sortedDates.Count; i++)
        {
            if (sortedDates[i - 1].AddDays(-1) == sortedDates[i])
                streak++;
            else
                break;
        }

        return streak;
    }

    private async Task LoadRecentActivity(List<Result> allResults)
    {
        try
        {
            recentActivity = new List<RecentActivityItem>();

            // קבלת חידונים שהושלמו עם התאריכים
            var completedQuizzes = allResults
                .GroupBy(r => r.quiz_id)
                .Select(g => new
                {
                    QuizId = g.Key,
                    CompletedAt = g.Max(r => r.answered_at),
                    Results = g.ToList()
                })
                .OrderByDescending(x => x.CompletedAt)
                .Take(4)
                .ToList();

            var quizDb = new QuizDB();

            foreach (var cq in completedQuizzes)
            {
                var quiz = await quizDb.GetQuizWithQuestionsAsync(cq.QuizId);
                if (quiz != null)
                {
                    int correct = cq.Results.Count(r => r.is_correct == 1);
                    int score = (int)Math.Round((double)correct / cq.Results.Count * 100);

                    recentActivity.Add(new RecentActivityItem
                        {
                            QuizName = quiz.QuizName,
                            Score = score,
                            CompletedAt = cq.CompletedAt
                        });
                }
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading recent activity: {ex.Message}");
            recentActivity = new List<RecentActivityItem>();
        }
    }

    private async Task LoadSubjectProgress(List<Result> allResults)
    {
        try
        {
            subjectProgress = new List<SubjectProgress>();
            var quizDb = new QuizDB();
            var subjectDb = new SubjectDB();

            // קבלת כל ה-Subjects
            var allSubjects = await subjectDb.GetAllSubjectsAsync();

            foreach (var subject in allSubjects)
            {
                // קבלת כל החידונים של ה-Subject הזה
                var subjectQuizzes = allQuizzes.Where(q => q.SubjectId == subject.subject_id).ToList();

                if (subjectQuizzes.Count == 0) continue;

                // קבלת התוצאות של התלמיד בחידונים אלו
                var subjectResults = allResults
                    .Where(r => subjectQuizzes.Any(sq => sq.QuizId == r.quiz_id))
                    .ToList();

                if (subjectResults.Count > 0)
                {
                    int correct = subjectResults.Count(r => r.is_correct == 1);
                    int avgScore = (int)Math.Round((double)correct / subjectResults.Count * 100);

                    subjectProgress.Add(new SubjectProgress
                        {
                            SubjectName = subject.subject_name,
                            AverageScore = avgScore
                        });
                }
            }

            // מיון לפי ציון
            subjectProgress = subjectProgress.OrderByDescending(sp => sp.AverageScore).ToList();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading subject progress: {ex.Message}");
            subjectProgress = new List<SubjectProgress>();
        }
    }

    private void LoadAchievements(List<Result> allResults)
    {
        try
        {
            achievements = new List<Achievement>();

            // הישג 1: Perfect Score (100% בחידון)
            var perfectQuizzes = allResults
                .GroupBy(r => r.quiz_id)
                .Where(g => g.All(r => r.is_correct == 1))
                .ToList();

            if (perfectQuizzes.Count > 0)
            {
                achievements.Add(new Achievement
                    {
                        Name = "Perfect Score",
                        Description = $"100% on {perfectQuizzes.Count} quiz(es)",
                        Icon = "🏆",
                        Type = "gold"
                    });
