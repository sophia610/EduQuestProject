    private async Task OpenRequestTutoringModal()
    {
        try
        {
            var customerDb = new CustomerDB();
            var all = await customerDb.GetAllAsync();
            availableTeachers = all.Where(c => c.Role == 1).ToList();

            // reset form
            selectedTeacherId = 0;
            requestSubject = "";
            requestDateTime = DateTime.Now.AddDays(1);
            requestDuration = 60;
            requestNotes = "";
            requestSuccess = "";
            requestError = "";

            showRequestModal = true;
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"OpenRequestTutoringModal error: {ex.Message}");
        }
    }

    private async Task SubmitTutoringRequest()
    {
        // ── Validation ──
        if (selectedTeacherId == 0)
        {
            requestError = "Please select a teacher.";
            return;
        }
        if (string.IsNullOrWhiteSpace(requestSubject))
        {
            requestError = "Please enter a subject.";
            return;
        }
        if (requestDateTime <= DateTime.Now)
        {
            requestError = "Please select a future date and time.";
            return;
        }

        isSubmitting = true;
        requestError = "";

        try
        {
            var requestDb = new RequestDB();
            var request = new Request
                {
                    TeacherId = selectedTeacherId,
                    StudentId = studentId,
                    Subject = requestSubject,
                    RequestedDateTime = requestDateTime,
                    DurationMinutes = requestDuration,
                    Notes = requestNotes ?? ""
                };

            await requestDb.CreateRequestAsync(request);

            requestSuccess = "Request sent successfully! Your teacher will review it soon.";
            await Task.Delay(2000);
            CloseRequestModal();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"SubmitTutoringRequest error: {ex.Message}");
            requestError = "Failed to send request. Please try again.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void CloseRequestModal()
    {
        showRequestModal = false;
        requestSuccess = "";
        requestError = "";
    }

