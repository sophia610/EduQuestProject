<div class="dashboard">
    <aside class="sidebar">
        <div class="logo">
            <div class="logo-icon">Q</div>
            <div class="logo-text">EduQuest</div>
        </div>
        <div class="sidebar-menu">
            <button class="sidebar-item active" @onclick="@(()=>nav.NavigateTo("/student-home"))">
                <span>🏠</span>
                <span>Home</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/student-quizzes"))">
                <span>📚</span>
                <span>Your Library</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/my-results"))">
                <span>📊</span>
                <span>My Results</span>
            </button>
            <button class="sidebar-item alert-badge" @onclick="@(()=>nav.NavigateTo("/notifications"))">
                <span>🔔</span>
                <span>Notifications</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/progress"))">
                <span>📈</span>
                <span>Progress</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/profile-student"))">
                <span>⚙️</span>
                <span>Settings</span>
            </button>
            <button class="sidebar-item" @onclick="@(()=>nav.NavigateTo("/search-quizzes"))">
                <span>🔍</span>
                <span>Search Quizzes</span>
