    private async Task LoadAllData()
    {
        try
        {
            var quizDb = new QuizDB();
            var resultDb = new ResultDB();

            allQuizzes = await quizDb.GetAllQuizzesAsync();
            totalAvailableQuizzes = allQuizzes.Count;

            var allResults = await resultDb.GetAllStudentResultsAsync(studentId);

            completedQuizzes = allResults.Select(r => r.quiz_id).Distinct().Count();
            dayStreak = CalculateDayStreak(allResults);
            totalQuestionsAnswered = allResults.Count;

            if (totalQuestionsAnswered > 0)
            {
                int correct = allResults.Count(r => r.is_correct == 1);
                overallAccuracy = (int)Math.Round((double)correct / totalQuestionsAnswered * 100);
            }

            totalStudyHours = (int)Math.Round(allResults.Sum(r => r.time_taken) / 3600.0);

            await LoadRecentActivity(allResults);
            await LoadSubjectProgress(allResults);
            LoadAchievements(allResults);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"LoadAllData error: {ex.Message}");
        }
    }

    private int CalculateDayStreak(List<Result> results)
    {
        if (results.Count == 0) return 0;

        var sorted = results
            .Select(r => r.answered_at.Date)
            .Distinct()
            .OrderByDescending(d => d)
            .ToList();

        var today = DateTime.Now.Date;
        if (sorted[0] != today && sorted[0] != today.AddDays(-1)) return 0;

        int streak = 1;
        for (int i = 1; i < sorted.Count; i++)
        {
            if (sorted[i - 1].AddDays(-1) == sorted[i]) streak++;
            else break;
        }
        return streak;
    }

    private async Task LoadRecentActivity(List<Result> allResults)
    {
        try
        {
            recentActivity = new List<RecentActivityItem>();
            var quizDb = new QuizDB();

            var recent = allResults
                .GroupBy(r => r.quiz_id)
                .Select(g => new
                {
                    QuizId = g.Key,
                    CompletedAt = g.Max(r => r.answered_at),
                    Results = g.ToList()
                })
                .OrderByDescending(x => x.CompletedAt)
                .Take(4);

            foreach (var item in recent)
            {
                var quiz = await quizDb.GetQuizWithQuestionsAsync(item.QuizId);
                if (quiz == null) continue;

                int correct = item.Results.Count(r => r.is_correct == 1);
                int score = (int)Math.Round((double)correct / item.Results.Count * 100);

                recentActivity.Add(new RecentActivityItem
                    {
                        QuizName = quiz.QuizName,
                        Score = score,
                        CompletedAt = item.CompletedAt
                    });
            }
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"LoadRecentActivity error: {ex.Message}");
            recentActivity = new List<RecentActivityItem>();
        }
    }

    private async Task LoadSubjectProgress(List<Result> allResults)
    {
        try
        {
            subjectProgress = new List<SubjectProgress>();
            var subjectDb = new SubjectDB();
            var allSubjects = await subjectDb.GetAllSubjectsAsync();

            foreach (var subject in allSubjects)
            {
                var subjectQuizzes = allQuizzes.Where(q => q.SubjectId == subject.subject_id).ToList();
                if (subjectQuizzes.Count == 0) continue;

                var subjectResults = allResults
                    .Where(r => subjectQuizzes.Any(sq => sq.QuizId == r.quiz_id))
                    .ToList();

                if (subjectResults.Count == 0) continue;

                int correct = subjectResults.Count(r => r.is_correct == 1);
                int avgScore = (int)Math.Round((double)correct / subjectResults.Count * 100);

                subjectProgress.Add(new SubjectProgress
                    {
                        SubjectName = subject.subject_name,
                        AverageScore = avgScore
                    });
            }

            subjectProgress = subjectProgress.OrderByDescending(sp => sp.AverageScore).ToList();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"LoadSubjectProgress error: {ex.Message}");
            subjectProgress = new List<SubjectProgress>();
        }
    }

    private void LoadAchievements(List<Result> allResults)
    {
        try
        {
            achievements = new List<Achievement>();

            var perfectQuizzes = allResults
                .GroupBy(r => r.quiz_id)
                .Where(g => g.All(r => r.is_correct == 1))
                .ToList();

            if (perfectQuizzes.Count > 0)
                achievements.Add(new Achievement
                    {
                        Name = "Perfect Score",
                        Description = $"100% on {perfectQuizzes.Count} quiz(es)",
                        Icon = "🏆",
                        Type = "gold"
                    });

            double avgTime = allResults.Count > 0 ? allResults.Average(r => r.time_taken) : 0;
            if (avgTime > 0 && avgTime < 30)
                achievements.Add(new Achievement
                    {
                        Name = "Speed Master",
                        Description = $"Avg {(int)avgTime}s per question",
                        Icon = "⚡",
                        Type = "silver"
                    });

            if (dayStreak >= 3)
                achievements.Add(new Achievement
                    {
                        Name = "Consistent Learner",
                        Description = $"{dayStreak} day study streak",
                        Icon = "🎯",
                        Type = "bronze"
                    });

            if (completedQuizzes >= 10)
                achievements.Add(new Achievement
                    {
                        Name = "Quiz Master",
                        Description = $"Completed {completedQuizzes} quizzes",
                        Icon = "📚",
                        Type = "gold"
                    });

            if (overallAccuracy >= 90)
                achievements.Add(new Achievement
                    {
                        Name = "High Scorer",
                        Description = $"{overallAccuracy}% overall accuracy",
                        Icon = "⭐",
                        Type = "gold"
                    });
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"LoadAchievements error: {ex.Message}");
            achievements = new List<Achievement>();
        }
    }

