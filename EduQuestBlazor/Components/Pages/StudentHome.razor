                    </div>
                    <div class="upcoming-content">
                        <div class="upcoming-title">Physics Review</div>
                        <div class="upcoming-time">3:00 PM - 4:00 PM</div>
                    </div>
                </div>
            </div>
        </aside>
    </div>
</div>

@code {
    private string studentName = "";
    private List<Question> quizzes;

    protected override async Task OnInitializedAsync()
    {
        var result = await session.GetAsync<Customers>("user");
        if (result.Success && result.Value != null)
        {
            studentName = result.Value.FullName;
            var db = new QuestionDB();
            quizzes = await db.GetRecentByTeacherAsync(1);
        }
        else
        {
            nav.NavigateTo("/login");
        }
    }

    private async Task Logout()
    {
        await session.DeleteAsync("user");
        nav.NavigateTo("/login", true);
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "U";
        var parts = name.Split(' ');
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name[0].ToString().ToUpper();
    }

    private int GetRandomQuestionCount()
    {
        var random = new Random();
        return random.Next(10, 31);
    }

    private int GetRandomDuration()
    {
        var random = new Random();
        return random.Next(10, 31);
    }
}