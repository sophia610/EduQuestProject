            if (completedQuizzes >= 10)
            {
                achievements.Add(new Achievement
                    {
                        Name = "Quiz Master",
                        Description = $"Completed {completedQuizzes} quizzes",
                        Icon = "📚",
                        Type = "gold"
                    });
