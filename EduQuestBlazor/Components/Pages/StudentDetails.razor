        padding: 14px 24px;
        border-radius: 12px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
        }

    .btn-secondary {
        background: #f3f4f6;
        color: #374151;
    }

        .btn-secondary:hover {
            background: #e5e7eb;
        }
</style>

<div class="page-container">
    <div class="top-nav">
        <button class="back-btn" @onclick="GoBack">
            <span>←</span>
            <span>Back to Dashboard</span>
        </button>
    </div>

    <div class="content-wrapper">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading student details...</p>
            </div>
        }
        else if (student == null)
        {
            <div class="empty-state">
                <div class="empty-icon">❌</div>
                <p>Student not found</p>
            </div>
        }
        else
        {
            <div class="student-header">
                <div class="student-avatar-large">@GetInitials(student.FullName)</div>
                <div class="student-info">
                    <h1 class="student-name">@student.FullName</h1>
                    <div class="student-email">@student.Email</div>
                    <div class="student-badges">
                        @if (strugglingQuizzes.Count > 0)
                        {
                            <span class="badge badge-warning">
                                <span>⚠️</span>
                                <span>Needs Attention</span>
                            </span>
                        }
                        <span class="badge badge-info">
                            <span>📚</span>
                            <span>@totalQuizzesTaken Quizzes Attempted</span>
                        </span>
                    </div>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon red">📉</div>
                    <div class="stat-value">@strugglingQuizzes.Count</div>
                    <div class="stat-label">Struggling Quizzes</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon orange">📊</div>
                    <div class="stat-value">@averageScore%</div>
                    <div class="stat-label">Average Score</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon blue">⏱️</div>
                    <div class="stat-value">@averageTime</div>
                    <div class="stat-label">Avg Time (sec)</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon green">💡</div>
                    <div class="stat-value">@hintsUsedCount</div>
                    <div class="stat-label">Hints Used</div>
                </div>
            </div>

            @if (strugglingQuizzes.Count > 0)
            {
                <div class="section">
                    <div class="section-header">
                        <h2 class="section-title">
                            <span>⚠️</span>
                            <span>Quizzes Needing Attention</span>
                        </h2>
                    </div>

                    <div class="quiz-list">
                        @foreach (var result in strugglingQuizzes)
                        {
                            <div class="quiz-item struggling">
                                <div class="quiz-header">
                                    <div class="quiz-name">@result.QuizName</div>
                                    <span class="score-badge fail">@result.Score%</span>
                                </div>
                                <div class="quiz-details">
                                    <div class="detail-item">
                                        <span>📝</span>
                                        <span>@result.QuestionsAnswered questions</span>
                                    </div>
                                    <div class="detail-item">
                                        <span>⏱️</span>
                                        <span>@result.AvgTime sec/question</span>
                                    </div>
                                    <div class="detail-item">
                                        <span>💡</span>
                                        <span>@result.HintsUsed hints used</span>
                                    </div>
                                </div>
                                <div class="progress-section">
                                    <div class="progress-label">Performance: @result.Score%</div>
                                    <div class="progress-bar-bg">
                                        <div class="progress-bar-fill danger" style="width: @result.Score%"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="recommendation-box">
                        <div class="recommendation-title">
                            <span>💡</span>
                            <span>Recommendations</span>
                        </div>
                        <ul class="recommendation-list">
                            @if (averageScore < 50)
                            {
                                <li>Schedule a one-on-one tutoring session to address fundamental concepts</li>
                                <li>Review basic concepts before attempting more complex quizzes</li>
                            }
                            @if (hintsUsedCount > totalQuizzesTaken * 2)
                            {
                                <li>Student frequently uses hints - consider providing additional study materials</li>
                            }
                            @if (averageTime > 60)
                            {
                                <li>Student takes longer than average - may need time management strategies</li>
                            }
                            <li>Encourage practice with similar topics to build confidence</li>
                            <li>Provide constructive feedback on specific areas of difficulty</li>
                        </ul>
                    </div>
                </div>
            }

            <div class="section">
                <div class="section-header">
                    <h2 class="section-title">
                        <span>📚</span>
                        <span>All Quiz Attempts</span>
                    </h2>
                </div>

                @if (allQuizResults.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-icon">📭</div>
                        <p>This student hasn't attempted any quizzes yet</p>
                    </div>
                }
                else
                {
                    <div class="quiz-list">
                        @foreach (var result in allQuizResults)
                        {
                            <div class="quiz-item">
                                <div class="quiz-header">
                                    <div class="quiz-name">@result.QuizName</div>
                                    <span class="score-badge @GetScoreClass(result.Score)">@result.Score%</span>
                                </div>
                                <div class="quiz-details">
                                    <div class="detail-item">
                                        <span>📝</span>
                                        <span>@result.QuestionsAnswered questions</span>
                                    </div>
                                    <div class="detail-item">
                                        <span>⏱️</span>
                                        <span>@result.AvgTime sec/question</span>
                                    </div>
                                    <div class="detail-item">
                                        <span>💡</span>
                                        <span>@result.HintsUsed hints</span>
                                    </div>
                                    <div class="detail-item">
                                        <span>📅</span>
                                        <span>@result.CompletedAt.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                                <div class="progress-section">
                                    <div class="progress-label">Score: @result.Score%</div>
                                    <div class="progress-bar-bg">
                                        <div class="progress-bar-fill @GetProgressClass(result.Score)" style="width: @result.Score%"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="action-buttons">
                <button class="action-btn btn-secondary" @onclick="GoBack">
                    ← Back to Dashboard
                </button>
                <button class="action-btn btn-primary" @onclick="ContactStudent">
                    ✉️ Send Message
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public int StudentId { get; set; }

    private Customers student;
    private List<QuizResult> strugglingQuizzes = new();
    private List<QuizResult> allQuizResults = new();
    private bool isLoading = true;
    private int teacherId = 0;

    // סטטיסטיקות
    private int totalQuizzesTaken = 0;
    private int averageScore = 0;
    private int averageTime = 0;
    private int hintsUsedCount = 0;

    private class QuizResult
    {
        public string QuizName { get; set; }
        public int Score { get; set; }
        public int QuestionsAnswered { get; set; }
        public int AvgTime { get; set; }
        public int HintsUsed { get; set; }
        public DateTime CompletedAt { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        // בדיקת מורה מחובר
        try
        {
            var result = await session.GetAsync<Customers>("user");
            if (result.Success && result.Value != null)
            {
                teacherId = result.Value.user_id;
            }
        }
        catch { }

        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            isLoading = true;

            // טעינת פרטי התלמיד
            var customerDb = new CustomerDB();
            student = await customerDb.SelectByPkAsync(StudentId);

            if (student == null) return;

            // טעינת תוצאות החידונים
            var resultDb = new ResultDB();
            var allResults = await resultDb.GetAllStudentResultsAsync(StudentId);

            if (allResults.Count == 0)
            {
                isLoading = false;
                return;
            }

            // קיבוץ לפי חידון
            var groupedByQuiz = allResults.GroupBy(r => r.quiz_id);

            var quizDb = new QuizDB();
            foreach (var group in groupedByQuiz)
            {
                var quizId = group.Key;
                var results = group.ToList();

                // שליפת פרטי החידון
                var quiz = await quizDb.GetQuizWithQuestionsAsync(quizId);

                //  בדיקה שהחידון שייך למורה הנוכחי
                if (quiz == null || quiz.TeacherId != teacherId) continue;

                var score = results.FirstOrDefault()?.score ?? 0;
                var questionsAnswered = results.Count;
                var avgTime = (int)results.Average(r => r.time_taken);
                var hintsUsed = results.Count(r => r.used_hint == 1);
                var completedAt = results.Max(r => r.answered_at);

                var quizResult = new QuizResult
                    {
                        QuizName = quiz.QuizName,
                        Score = score,
                        QuestionsAnswered = questionsAnswered,
                        AvgTime = avgTime,
                        HintsUsed = hintsUsed,
                        CompletedAt = completedAt
                    };

                allQuizResults.Add(quizResult);

                //  זיהוי חידונים בעייתיים (ציון נמוך מ-60%)
                if (score < 60)
                {
                    strugglingQuizzes.Add(quizResult);
                }
            }

            // חישוב סטטיסטיקות
            totalQuizzesTaken = allQuizResults.Count;
            if (totalQuizzesTaken > 0)
            {
                averageScore = (int)allQuizResults.Average(r => r.Score);
                averageTime = (int)allQuizResults.Average(r => r.AvgTime);
                hintsUsedCount = allQuizResults.Sum(r => r.HintsUsed);
            }

            // מיון לפי ציון (נמוך לגבוה)
            strugglingQuizzes = strugglingQuizzes.OrderBy(r => r.Score).ToList();
            allQuizResults = allQuizResults.OrderByDescending(r => r.CompletedAt).ToList();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "S";
        var parts = name.Split(' ');
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name[0].ToString().ToUpper();
    }

    private string GetScoreClass(int score)
    {
        if (score >= 80) return "pass";
        if (score >= 60) return "warning";
        return "fail";
    }

    private string GetProgressClass(int score)
    {
        if (score >= 80) return "success";
        if (score >= 60) return "warning";
        return "danger";
    }

    private void GoBack()
    {
        nav.NavigateTo("/teacher-home");
    }

    private void ContactStudent()
    {
        // ניתן להוסיף פונקציונליות שליחת הודעה
        nav.NavigateTo($"/send-message/{StudentId}");
    }
}