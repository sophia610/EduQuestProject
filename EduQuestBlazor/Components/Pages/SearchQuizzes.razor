@page "/search-quizzes"
@using DBL
@using Models
@inject NavigationManager nav
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage session

<PageTitle>Search Quizzes | EduQuest</PageTitle>

<style>
    body {
        margin: 0;
        background: #f5f7fa;
        font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    }

    .page-container {
        min-height: 100vh;
        background: #f5f7fa;
    }

    .top-nav {
        background: white;
        padding: 16px 32px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .back-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        background: none;
        border: none;
        color: #667eea;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        padding: 8px 16px;
        border-radius: 8px;
        transition: all 0.2s;
    }

        .back-btn:hover {
            background: #eef2ff;
        }

    .content-wrapper {
        max-width: 1200px;
        margin: 0 auto;
        padding: 32px;
    }

    .search-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .search-title {
        font-size: 36px;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0 0 12px 0;
    }

    .search-subtitle {
        font-size: 16px;
        color: #6b7280;
    }

    .search-section {
        background: white;
        border-radius: 20px;
        padding: 32px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
        margin-bottom: 32px;
    }

    .search-bar-container {
        position: relative;
        margin-bottom: 24px;
    }

    .search-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 20px;
        color: #9ca3af;
        pointer-events: none;
    }

    .search-input {
        width: 100%;
        padding: 16px 20px 16px 56px;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        font-size: 16px;
        font-family: inherit;
        transition: all 0.2s;
        box-sizing: border-box;
    }

        .search-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

    .filters-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .filter-label {
        font-size: 14px;
        font-weight: 600;
        color: #374151;
    }

    .filter-select {
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        font-size: 14px;
        font-family: inherit;
        background: white;
        cursor: pointer;
        transition: all 0.2s;
    }

        .filter-select:focus {
            outline: none;
            border-color: #667eea;
        }

    .results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .results-count {
        font-size: 18px;
        font-weight: 600;
        color: #1f2937;
    }

    .sort-container {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .sort-label {
        font-size: 14px;
        color: #6b7280;
        font-weight: 500;
    }

    .sort-select {
        padding: 8px 12px;
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        font-size: 14px;
        cursor: pointer;
    }

    .quiz-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
    }

    .quiz-card {
        background: white;
        border: 2px solid #e5e7eb;
        border-radius: 16px;
        padding: 24px;
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

        .quiz-card:hover {
            border-color: #667eea;
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.15);
        }

        .quiz-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .quiz-card:hover::before {
            opacity: 1;
        }

    .quiz-card-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 16px;
    }

    .quiz-badge {
        background: #eef2ff;
        color: #667eea;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
    }

    .quiz-name {
        font-size: 18px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 8px;
    }

    .quiz-description {
        font-size: 14px;
        color: #6b7280;
        margin-bottom: 16px;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .quiz-meta {
        display: flex;
        gap: 16px;
        font-size: 13px;
        color: #9ca3af;
        margin-bottom: 16px;
    }

        .quiz-meta span {
            display: flex;
            align-items: center;
            gap: 6px;
        }

    .quiz-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 16px;
        border-top: 1px solid #f3f4f6;
    }

    .teacher-info {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .teacher-avatar {
        width: 28px;
        height: 28px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
        font-weight: 600;
    }

    .teacher-name {
        font-size: 13px;
        color: #6b7280;
    }

    .start-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

        .start-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #9ca3af;
    }

    .empty-icon {
        font-size: 64px;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-title {
        font-size: 20px;
        font-weight: 600;
        color: #6b7280;
        margin-bottom: 8px;
    }

    .empty-text {
        font-size: 15px;
    }

    .loading-state {
        text-align: center;
        padding: 80px 20px;
    }

    .spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #e5e7eb;
        border-top-color: #667eea;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 16px;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .clear-filters-btn {
        background: #fef2f2;
        border: none;
        color: #dc2626;
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

        .clear-filters-btn:hover {
            background: #fee2e2;
        }
</style>

<div class="page-container">
    <div class="top-nav">
        <button class="back-btn" @onclick="GoBack">
            <span>←</span>
            <span>Back to Home</span>
        </button>
    </div>

    <div class="content-wrapper">
        <div class="search-header">
            <h1 class="search-title">Discover Quizzes</h1>
            <p class="search-subtitle">Find the perfect quiz to test your knowledge</p>
        </div>

        <div class="search-section">
            <div class="search-bar-container">
                <span class="search-icon">🔍</span>
                <input type="text" class="search-input" placeholder="Search by quiz name, description, or topic..."
                       @bind="searchQuery" @bind:event="oninput" @onkeyup="HandleSearch" />
            </div>

            <div class="filters-row">
                <div class="filter-group">
                    <label class="filter-label">Subject</label>
                    <select class="filter-select" value="@selectedSubject" @onchange="OnSubjectChanged">
                        <option value="0">All Subjects</option>
                        @if (subjects != null)
                        {
                            @foreach (var subject in subjects)
                            {
                                <option value="@subject.subject_id">@subject.subject_name</option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-group">
                    <label class="filter-label">Topic</label>
                    <select class="filter-select" value="@selectedTopic" @onchange="OnTopicChanged" disabled="@(selectedSubject == 0)">
                        <option value="0">All Topics</option>
                        @if (topics != null)
                        {
                            @foreach (var topic in topics)
                            {
                                <option value="@topic.topic_id">@topic.topic_name</option>
                            }
                        }
                    </select>
                </div>

                <div class="filter-group">
                    <label class="filter-label">Status</label>
                    <select class="filter-select" value="@selectedStatus" @onchange="OnStatusChanged">
                        <option value="all">All Quizzes</option>
                        <option value="active">Active Only</option>
                        <option value="new">New Quizzes</option>
                    </select>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading quizzes...</p>
            </div>
        }
        else
        {
            <div class="search-section">
                <div class="results-header">
                    <div class="results-count">
                        Found @filteredQuizzes.Count @(filteredQuizzes.Count == 1 ? "quiz" : "quizzes")
                    </div>
                    <div class="sort-container">
                        @if (selectedSubject != 0 || selectedTopic != 0 || !string.IsNullOrEmpty(searchQuery))
                        {
                            <button class="clear-filters-btn" @onclick="ClearFilters">
                                Clear Filters
                            </button>
                        }
                        <span class="sort-label">Sort by:</span>
                        <select class="sort-select" value="@sortBy" @onchange="OnSortChanged">
                            <option value="newest">Newest First</option>
                            <option value="oldest">Oldest First</option>
                            <option value="name">Name (A-Z)</option>
                        </select>
                    </div>
                </div>

                @if (filteredQuizzes.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-icon">🔍</div>
                        <div class="empty-title">No quizzes found</div>
                        <p class="empty-text">Try adjusting your search or filters to find what you're looking for</p>
                    </div>
                }
                else
                {
                    <div class="quiz-grid">
                        @foreach (var quiz in filteredQuizzes)
                        {
                            <div class="quiz-card" @onclick="@(() => StartQuiz(quiz.QuizId))">
                                <div class="quiz-card-header">
                                    <span class="quiz-badge">@GetSubjectName(quiz.SubjectId)</span>
                                </div>
                                <div class="quiz-name">@quiz.QuizName</div>
                                <div class="quiz-description">@(string.IsNullOrEmpty(quiz.Description) ? "No description available" : quiz.Description)</div>
                                <div class="quiz-meta">
                                    <span>📝 @(quiz.Questions?.Count ?? 0) questions</span>
                                    <span>📅 @quiz.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="quiz-footer">
                                    <div class="teacher-info">
                                        <div class="teacher-avatar">@GetTeacherInitials(quiz.TeacherId)</div>
                                        <span class="teacher-name">@GetTeacherName(quiz.TeacherId)</span>
                                    </div>
                                    <button class="start-btn" @onclick="@(() => StartQuiz(quiz.QuizId))" @onclick:stopPropagation>
                                        Start Quiz →
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<Quiz> allQuizzes = new();
    private List<Quiz> filteredQuizzes = new();
    private List<Subject> subjects = new();
    private List<Topic> topics = new();
    private Dictionary<int, string> teacherNames = new(); // ✅ שמות מורים

    private string searchQuery = "";
    private int selectedSubject = 0;
    private int selectedTopic = 0;
    private string selectedStatus = "all";
    private string sortBy = "newest";
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            isLoading = true;

            // טעינת כל החידונים
            var quizDb = new QuizDB();
            allQuizzes = await quizDb.GetAllQuizzesAsync();

            // ✅ טעינת שמות מורים
            var customerDb = new CustomerDB();
            var uniqueTeacherIds = allQuizzes.Select(q => q.TeacherId).Distinct().ToList();
            foreach (var teacherId in uniqueTeacherIds)
            {
                var teacher = await customerDb.SelectByPkAsync(teacherId);
                if (teacher != null)
                {
                    teacherNames[teacherId] = teacher.FullName;
                }
            }

            // טעינת מקצועות
            var subjectDb = new SubjectDB();
            subjects = await subjectDb.GetAllSubjectsAsync();

            // הצגת כל החידונים בהתחלה
            filteredQuizzes = allQuizzes.ToList();
            SortQuizzes();
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task OnSubjectChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int subjectId))
        {
            selectedSubject = subjectId;
            selectedTopic = 0;

            if (subjectId > 0)
            {
                var topicDb = new TopicDB();
                topics = await topicDb.GetBySubjectAsync(subjectId);
            }
            else
            {
                topics = new List<Topic>();
            }

            FilterQuizzes();
        }
    }

    private void OnTopicChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int topicId))
        {
            selectedTopic = topicId;
            FilterQuizzes();
        }
    }

    private void OnStatusChanged(ChangeEventArgs e)
    {
        selectedStatus = e.Value?.ToString() ?? "all";
        FilterQuizzes();
    }

    private void OnSortChanged(ChangeEventArgs e)
    {
        sortBy = e.Value?.ToString() ?? "newest";
        SortQuizzes();
    }

    private void HandleSearch(KeyboardEventArgs e)
    {
        FilterQuizzes();
    }

    private void FilterQuizzes()
    {
        filteredQuizzes = allQuizzes.Where(q =>
        {
            // סינון לפי חיפוש טקסט
            bool matchesSearch = string.IsNullOrEmpty(searchQuery) ||
                                 q.QuizName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                                 (q.Description != null && q.Description.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));

            // סינון לפי מקצוע
            bool matchesSubject = selectedSubject == 0 || q.SubjectId == selectedSubject;

            // סינון לפי נושא
            bool matchesTopic = selectedTopic == 0 || q.TopicId == selectedTopic;

            // סינון לפי סטטוס
            bool matchesStatus = selectedStatus switch
            {
                "active" => q.IsActive,
                "new" => (DateTime.Now - q.CreatedAt).TotalDays <= 7,
                _ => true
            };

            return matchesSearch && matchesSubject && matchesTopic && matchesStatus;
        }).ToList();

        SortQuizzes();
    }

    private void SortQuizzes()
    {
        filteredQuizzes = sortBy switch
        {
            "newest" => filteredQuizzes.OrderByDescending(q => q.CreatedAt).ToList(),
            "oldest" => filteredQuizzes.OrderBy(q => q.CreatedAt).ToList(),
            "name" => filteredQuizzes.OrderBy(q => q.QuizName).ToList(),
            _ => filteredQuizzes
        };
    }

    private void ClearFilters()
    {
        searchQuery = "";
        selectedSubject = 0;
        selectedTopic = 0;
        selectedStatus = "all";
        topics = new List<Topic>();
        FilterQuizzes();
    }

    private string GetSubjectName(int subjectId)
    {
        var subject = subjects.FirstOrDefault(s => s.subject_id == subjectId);
        return subject?.subject_name ?? "General";
    }

    private string GetTeacherName(int teacherId)
    {
        return teacherNames.ContainsKey(teacherId) ? teacherNames[teacherId] : "Teacher";
    }

    private string GetTeacherInitials(int teacherId)
    {
        if (!teacherNames.ContainsKey(teacherId)) return "T";

        var name = teacherNames[teacherId];
        var parts = name.Split(' ');
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name[0].ToString().ToUpper();
    }

    private void StartQuiz(int quizId)
    {
        nav.NavigateTo($"/take-quiz/{quizId}");
    }

    private void GoBack()
    {
        nav.NavigateTo("/student-home");
    }
}